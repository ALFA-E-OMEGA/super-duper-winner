<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_contract_form" model="ir.ui.view">
        <field name="name">contract.form</field>
        <field name="model">contract</field>
        <field name="arch" type="xml">
            <form class="myform" string="Cadastro de Contrato">

            <div class="container_form contract_form">
                <h1>Contrato</h1>
                    <article class="container_form_contents">
                        <section class="group">
                            <div class="container_field">
                                <span>CÃ³digo:</span>
                                <field class="field" name="id_contract"/>

                            </div>

                            <div class="subgroup">
                                <div class="container_field">
                                    <span>Cliente:</span>
                                    <field class="field" name="client_type"/>

                                </div>

                                <div class="container_field">
                                    <span>Status:</span>
                                    <field class="field" name="status"/>
                                    
                                </div>

                            </div>

                        </section>
                        <section class="group">
                            <div class="subgroup">
                                <div class="container_field">
                                    <span>Data de Registro:</span>
                                    <field class="field" name="register_date" readonly="1"/>

                                </div>

                                <div class="container_field">
                                    <span>Data do Contrato:</span>
                                    <field class="field" name="contract_date"/>
                                    
                                </div>

                            </div>

                            <div class="container_button">
                                <button name="create_contract" class="btnSecondary mybutton"
                                type="object" string="Salvar"
                                confirm="Confimar dados de Contrato?"/>
                            </div>

                        </section>

                    </article>
            </div>
            </form>


        </field>

    </record>

    <record id="view_contract_list" model="ir.ui.view">
        <field name="name">contract.list</field>
        <field name="model">contract</field>
        <field name="arch" type="xml">
            <list string="Contrato">
                <field class="test" name="id_contract"/>
                <field class="test" name="status"/>
            </list>
        </field>
    </record>

    <record id="action_register_contract" model="ir.actions.act_window">
        <field name="name">Contrato</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">contract</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem  id="menu_contract_register"
            parent="menu_registro"
            action="action_register_contract"
            name="Contratos"
            sequence="5"/>
</odoo>
